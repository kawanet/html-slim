{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "bin/",
    "src/",
    "types/"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "skipLibCheck": false,
    "strictNullChecks": false,
    "target": "ES2022"
  }
}
